{
  "name": "pingpong",
  "scripts": {
  },
  "env": {
    "HEROKU_SLUG_DESCRIPTION": {
      "required": true
    },
    "KAFKA_CLIENT_CERT": {     
      "required": true
    },
    "KAFKA_CLIENT_CERT_KEY": {
      "required": true
    },
    "KAFKA_PREFIX": {
      "required": true
    },
    "KAFKA_TRUSTED_CERT": {
      "required": true
    },
    "KAFKA_URL": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "options": {
        "maxmemory_policy": "allkeys-lru"
      }      
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/go"
    }
  ]
}
