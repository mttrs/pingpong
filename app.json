{
  "name": "pingpong",
  "scripts": {
    "postdeploy": "heroku pg:backups:restore $HEROKU_PARENT_APP_NAME::b001 -a $HEROKU_APP_NAME -c $HEROKU_APP_NAME"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "HEROKU_API_KEY": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku-community/cli"
    },
    {
      "url": "heroku/go"
    }
  ]
}
